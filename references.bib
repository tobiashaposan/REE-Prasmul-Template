	author = {Cohen, Bat El and Wierzbowska, Małgorzata and Etgar, Lioz},
	month = feb,
	year = {2017},
	note = {Publisher: Wiley-VCH Verlag},
	keywords = {2D perovskite, low dimension materials, open circuit voltage, solar cells},
}

@article{grancini_one-year_2017,
